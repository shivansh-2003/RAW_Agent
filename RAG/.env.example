# API Configuration
API_KEY=your-api-key-here
INTERNAL_API_KEY=internal-service-key-here
ENVIRONMENT=development

# External APIs
ANTHROPIC_API_KEY=your-anthropic-key-here

# Paths Configuration
RULES_FILE_PATH=./data/data.json
VECTOR_STORE_PATH=./data/vector_store
GRAPH_DB_PATH=./data/graph_store
EVENT_HISTORY_FILE=./data/event_history.json

# Component Configuration
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K_VECTOR=5
TOP_K_GRAPH=3

# Security Configuration
CLEARANCE_ESCALATION_THRESHOLD=0.7
QUERY_FREQUENCY_THRESHOLD=0.8
PATTERN_SIMILARITY_THRESHOLD=0.75

# Service URLs (for local setup)
AUTH_SERVICE_URL=http://localhost:8001
SESSION_SERVICE_URL=http://localhost:8002

# Logging
LOG_LEVEL=INFO 